<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="signUpScreen" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalexam2.SignUpController">
   <children>
      <TextField fx:id="registerUsername" layoutX="200.0" layoutY="150.0" prefHeight="30.0" prefWidth="200.0" promptText="Username" />
      <Text fill="#29b0ef" layoutX="246.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up">
         <font>
            <Font size="30.0" />
         </font>
      </Text>
      <PasswordField fx:id="registerPassword" layoutX="200.0" layoutY="200.0" prefHeight="30.0" prefWidth="200.0" promptText="Password" />
      <PasswordField fx:id="confirmPassword" layoutX="200.0" layoutY="250.0" prefHeight="30.0" prefWidth="200.0" promptText="Confirm Password" />
      <Button fx:id="buttonSignUpAccount" layoutX="232.0" layoutY="316.0" mnemonicParsing="false" onAction="#SignUpAccount" text="Sign Up An Account" />
      <Button fx:id="returnLogin" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#ReturnLogin" text="Return" />
   </children>
</AnchorPane>
